<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="eu.quelltext.mundraub">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".NewPlantActivity" />
        <activity
            android:name=".PlantListActivity"
            android:label="@string/title_plant_list"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PlantDetailActivity"
            android:label="@string/title_plant_detail"
            android:parentActivityName=".PlantListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="eu.quelltext.mundraub.PlantListActivity" />
        </activity>
        <activity
            android:name=".ChoosePlantType"
            android:label="@string/title_activity_choose_plant_type"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>